{
  "$schema": "https://mintlify.com/docs.json",
  "name": "Hotelgest Unified",
  "theme": "mint",
  "logo": {
    "dark": "/logo/logo-dark.svg",
    "light": "/logo/logo-light.svg"
  },
  "favicon": "/favicon.ico",
  "colors": {
    "primary": "#0D9373",
    "light": "#0D9373",
    "dark": "#0a7560"
  },
  "banner": {
    "content": "Bienvenido a la documentación de Hotelgest Unified. [Ir a la aplicación](https://app.hotelgest.com) · [Soporte](https://help.hotelgest.com)",
    "dismissible": true
  },
  "navbar": {
    "links": [{ "label": "Ir a la aplicación", "href": "https://app.hotelgest.com" }],
    "primary": { "type": "button", "label": "Iniciar sesión", "href": "https://app.hotelgest.com/login" }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Guía de usuario",
        "groups": [
          {
            "group": "Guía de usuario",
            "pages": [
              "docs/README",
              "docs/01-inicio-y-autenticacion",
              "docs/02-dashboard",
              "docs/03-planificacion",
              "docs/04-reservas",
              "docs/05-facturacion-y-pagos",
              "docs/06-housekeeping",
              "docs/07-informes",
              "docs/08-motor-de-reservas",
              "docs/09-comunicaciones",
              "docs/10-recepcion-automatica",
              "docs/11-configuracion",
              "docs/12-integraciones",
              "docs/13-multipropiedad",
              "docs/14-actividad-e-historial",
              "docs/15-academia-y-ayuda",
              "docs/16-aplicacion-movil",
              "docs/17-administracion-super-admin"
            ]
          }
        ]
      },
      {
        "tab": "API reference",
        "groups": [
          { "group": "Public API", "openapi": "public-api.swagger.json" },
          { "group": "Booking Engine API", "openapi": "booking-engine-api.swagger.json" }
        ]
      }
    ],
    "global": {
      "anchors": [
        { "anchor": "Aplicación", "href": "https://app.hotelgest.com", "icon": "house" },
        { "anchor": "Soporte", "href": "https://help.hotelgest.com", "icon": "headset" }
      ]
    }
  },
  "redirects": [
    { "source": "/", "destination": "/docs/readme" },
    { "source": "/README", "destination": "/docs/readme" },
    { "source": "/readme", "destination": "/docs/readme" },
    { "source": "/guia/readme", "destination": "/docs/readme" },
    { "source": "/guia/README", "destination": "/docs/readme" }
  ],
  "footer": {
    "socials": {
      "twitter": "https://twitter.com/hotelgest",
      "linkedin": "https://www.linkedin.com/company/hotelgest"
    }
  },
  "styling": { "eyebrows": "breadcrumbs" },
  "icons": { "library": "lucide" }
}
